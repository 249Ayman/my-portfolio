---
import "@styles/global.css";
import Head from "@components/Head.astro";
import { SITE } from "@consts";

type Props = {
  title: string;
  description: string;
  image?: string;
};

const { title, description, image }: Props = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head
      title={`${title} | ${SITE.title}`}
      description={description}
      image={image}
    />
  </head>
</html>
