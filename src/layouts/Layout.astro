---
import '~/styles/global.css'
import { SITE } from '~/config'
import Head from '~/components/Head.astro'
import Header from '~/components/Header.astro'
import Footer from '~/components/Footer.astro'

type Props = {
  title: string
  description: string
  image?: string
}

const { title, description, image }: Props = Astro.props
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <Head title={`${title} | ${SITE.title}`} {description} {image} />
  </head>
  <body>
    <Header />
    <main class="flex-auto border-x border-border/50 max-w-3xl mx-auto">
      <slot />
    </main>
    <Footer />
    <div
      class="pointer-events-none fixed bottom-0 left-0 h-28 w-full z-50 bg-background [mask-image:linear-gradient(transparent,hsl(var(--background)))]"
    >
    </div>
  </body>
</html>
