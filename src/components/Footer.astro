---
import { FOOTER_LINKS } from "@consts";
import SectionDivider from "@components/SectionDivider.tsx";
import FooterLink from "@components/FooterLink.astro";
import ThemeToggle from "@components/ThemeToggle.tsx";
---

<SectionDivider />
<footer class="flex-none border-x border-border/50 max-w-3xl mx-auto">
  <div class="py-4">
    <div class="pb-8">
      <div class="flex flex-wrap gap-x-6 gap-y-1 text-sm font-medium text-muted-foreground pb-4 px-8 border-b border-border/50">
        {FOOTER_LINKS.map((link) => <FooterLink href={link.url}>{link.name}</FooterLink>)}
      </div>
      <div class="text-sm text-muted-foreground px-8 py-4">
        <div class="items-center flex flex-wrap gap-4">
          <a href="https://nextjs.org" target="_blank" rel="nofollow" class="items-center flex gap-1 dark:hover:text-white"> Built with </a>
          <a href="https://www.vercel.com" target="_blank" rel="nofollow" class="items-center flex gap-1 dark:hover:text-white">
            Deployed on
          </a>
          <a href="https://github.com/needim/ned.im" target="_blank" rel="nofollow" class="items-center flex gap-1 dark:hover:text-white">
            Source on
          </a>
          <div class="grow"></div>
          <ThemeToggle client:load />
        </div>
      </div>
    </div>
  </div>
</footer>
