---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  class?: string;
  bg?: boolean;
  [key: string]: any;
};

const { href, class: className, bg, ...props }: Props = Astro.props;
const isActive = Astro.url.pathname === href;
---

<a
  href={href}
  class={cn(
    "text-sm px-4 py-2 font-medium",
    bg &&
      "transition-colors text-foreground/50 hover:bg-accent/30 hover:text-foreground",
    isActive && "text-foreground",
    className
  )}
  {...props}
>
  <slot />
</a>
