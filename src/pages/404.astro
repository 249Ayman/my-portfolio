---
import Layout from '@layouts/Layout.astro'
---

<Layout title="Page Not Found" description="404 Page">
  <div id="notFoundContent" class="not-found flex-1 flex justify-center font-mono">
    <div class="relative z-[1] w-full max-w-3xl">
      <div class="py-12 px-8">
        <div class="terminal-container text-sm">
          <div class="terminal-output">
            <div class="flex items-center text-muted-foreground mb-2 animate-fade-in">
              <span class="text-green-500 mr-2 w-4 text-center">$</span>
              <span class="animate-typing-short">whoami</span>
            </div>
            <div class="flex items-center text-muted-foreground mb-2 animate-fade-in" style="animation-delay: 0.5s">
              <span class="text-green-500 mr-2 w-4 text-center">$</span>
              <span class="animate-typing" style="animation-delay: 0.5s">cd /home</span>
            </div>
            <div class="flex items-center text-muted-foreground mb-2 animate-fade-in" style="animation-delay: 1s">
              <span class="text-red-500 mr-2 w-4 text-center">✗</span>
              <span>Error: Directory not found</span>
            </div>
            <div class="flex items-center text-muted-foreground mb-2">
              <span class="text-green-500 mr-2 w-4 text-center">$</span>
              <span class="text-muted-foreground/50 animate-fade-in" style="animation-delay: 1.2s">// Available commands:</span>
            </div>
            <div class="flex items-center text-muted-foreground mb-2 ml-4">
              <span class="text-blue-500 mr-2 w-4 text-center">›</span>
              <span class="cursor-pointer hover:text-foreground animate-fade-in" style="animation-delay: 1.5s" onclick="history.back()">
                cd ..
              </span>
            </div>
            <div class="flex items-center text-muted-foreground mb-2 ml-4">
              <span class="text-blue-500 mr-2 w-4 text-center">›</span>
              <span
                class="cursor-pointer hover:text-foreground animate-fade-in"
                style="animation-delay: 1.8s"
                onclick="window.location.href='/'"
                >cd /
              </span>
            </div>
          </div>
          <div class="terminal-input flex items-center mt-4">
            <span class="text-green-500 mr-2">$</span>
            <input
              type="text"
              id="terminalInput"
              class="bg-transparent border-none outline-none w-full text-muted-foreground caret-green-500"
              placeholder="input..."
              autocomplete="off"
              autocorrect="off"
              autocapitalize="off"
              spellcheck="false"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  #notFoundContent {
    min-height: calc(100vh - 272px);
  }

  .animate-typing-short {
    animation: typing 0.5s steps(6) forwards;
    overflow: hidden;
    white-space: nowrap;
  }

  .animate-typing {
    animation: typing 0.8s steps(10) forwards;
    overflow: hidden;
    white-space: nowrap;
  }

  @keyframes typing {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.3s ease-out forwards;
    opacity: 0;
  }
</style>
